<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LecturerActivity">

    <TextView
        android:id="@+id/lecturer_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lecturer Generator"
        android:textSize="30dp"
        android:gravity="center"
        android:padding="20dp"
        android:background="@android:color/holo_orange_light"
        />

    <EditText
        android:id="@+id/lecturer_id_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lecturer ID"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/lecturer_name_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lecturer Name"
        android:layout_marginTop="20dp" />

    <Spinner
        android:id="@+id/email_Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/position_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Position"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/lecturer_department_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Department"
        android:layout_marginTop="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/avatar_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_avatar"
            android:background="@drawable/circle"
            android:backgroundTint="@color/white"
            android:layout_centerVertical="true"/>
        <Button
            android:id="@+id/btn_upload_image"
            android:text="upload"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <Button
        android:id="@+id/lecturer_insert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:text="Insert Lecturer" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lecturer_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>